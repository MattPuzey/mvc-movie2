@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Movies Service</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Movies in store</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: movies">
                    <li>
                        <strong><span data-bind="text: Title"></span></strong>: £<span data-bind="text: Price"></span>
                        &nbsp;
                        <small><a href="#" data-bind="click: $parent.getMovieDetail">Details</a></small>
                    </li>
                    &nbsp;
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error">
            <p data-bind="text: error"></p>
        </div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr><td>Title</td><td data-bind="text: detail().Title"></td></tr>
                <tr><td>Release date</td><td data-bind="text: detail().ReleaseDate"></td></tr>
                <tr><td>Genre</td><td data-bind="text: detail().Genre"></td></tr>
                <tr><td>Price</td><td data-bind="text: detail().Price"></td></tr>
                <tr><td>Rating</td><td data-bind="text: detail().Rating"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Movie</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addMovie">

                    <div class="form-group" data-bind="with: newMovie">
                        
                        <label for="inputTitle" class="col-sm-3 control-label">Title</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Title"/>
                        </div>

                        <label for="inputReleaseDate" class="col-sm-3 control-label">Released</label>
                        <div class="col-sm-9">
                           <input type="date" class="form-control" id="inputReleaseDate" data-bind="value:ReleaseDate"/>
                        </div>

                        <label for="inputGenre" class="col-sm-3 control-label">Genre</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputGenre" data-bind="value:Genre"/>
                        </div>

                        <label for="inputPrice" class="col-sm-3 control-label">Price</label>
                        <div class="col-sm-9">
                            <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price"/>
                        </div>
                        <!--not picked up in binding? -->
                        <label for="inputRating" class="col-sm-3 control-label">Rating</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputRating" data-bind="value:Rating" />
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

